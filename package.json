{
  "name": "ias-schule",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.18.2",
  "description": "Beautiful, Interactive Data Visualizations with Observable Plot & D3.js",
  "author": "IAS Schule",
  "license": "MIT",
  "homepage": "https://github.com/darsheee/ias.schule#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darsheee/ias.schule.git"
  },
  "bugs": "https://github.com/darsheee/ias.schule/issues",
  "keywords": [
    "data visualization",
    "Observable Plot",
    "D3.js",
    "charts",
    "graphs",
    "Vue",
    "VitePress"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vitepress dev",
    "build": "vitepress build",
    "serve": "nr build && vitepress serve",
    "https": "nr build && serve .vitepress/dist",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "generate-pwa-icons": "pwa-assets-generator",
    "compress": "tsx scripts/img-compress-staged.ts",
    "optimize:images": "tsx scripts/img-compress-cli.ts",
    "generate:blurhash": "tsx scripts/generate-blurhash.ts",
    "smart:optimize": "tsx scripts/smart-image-processor-v2.ts",
    "create:template": "tsx scripts/productivity/template-generator.ts",
    "csv:table": "tsx scripts/productivity/csv-to-table.ts",
    "stats": "tsx scripts/productivity/stats-dashboard.ts",
    "check:links": "tsx scripts/productivity/link-checker.ts",
    "frontmatter:auto": "tsx scripts/productivity/frontmatter-autofill.ts"
  },
  "dependencies": {
    "mermaid": "^11.12.1",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@antfu/ni": "^26.1.0",
    "@observablehq/plot": "^0.6.16",
    "@types/node": "^22.9.3",
    "@types/prompts": "^2.4.9",
    "@unpic/placeholder": "^0.1.2",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vite-pwa/vitepress": "^1.0.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vueuse/core": "^13.9.0",
    "ansis": "^3.4.0",
    "blurhash": "^2.0.5",
    "csv-parse": "^5.5.6",
    "d3": "^7.9.0",
    "eslint": "^9.37.0",
    "gray-matter": "^4.0.3",
    "exifreader": "^4.24.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "https-localhost": "^4.7.1",
    "lint-staged": "^15.2.11",
    "oxc-minify": "^0.95.0",
    "prompts": "^2.4.2",
    "sharp": "^0.33.5",
    "simple-git": "^3.27.0",
    "simple-git-hooks": "^2.12.0",
    "tsx": "^4.20.1",
    "typescript": "~5.9.3",
    "unocss": "^66.5.4",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.10",
    "vite-plugin-pwa": "^1.1.0",
    "vitepress": "^2.0.0-alpha.12",
    "vitepress-plugin-group-icons": "^1.6.4",
    "workbox-window": "^7.3.0"
  },
  "pnpm": {
    "overrides": {
      "oxc-minify": "^0.95.0",
      "vite": "npm:rolldown-vite@latest",
      "workbox-build": "^7.3.0",
      "workbox-window": "^7.3.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
